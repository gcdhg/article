{
  "compilerOptions": {
    "outDir": "./dist",
    "pretty": true,
    "esModuleInterop": true,
    "rootDir": "src",
    "target": "es2018",
    "module": "commonjs",
    "baseUrl": ".",
    "lib": ["es2018", "esnext.asynciterable"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "compileOnSave": true,
  "removeComments": true,
  "exclude": ["node_modules"],
  "include": ["src"]
}
